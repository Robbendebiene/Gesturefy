{
  "manifest_version": 2,
  "name": "Gesturefy",
  "version": "1.1.14",
  "description": "__MSG_extensionDescription__",
  "author": "Robbendebiene",
  "homepage_url": "https://github.com/Robbendebiene/Gesturefy",
  "icons": {
    "96": "res/icons/iconx96.png",
    "48": "res/icons/iconx48.png",
    "32": "res/icons/iconx32.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "sessions",
    "bookmarks",
    "downloads",
    "clipboardWrite",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "match_about_blank": true,
      "all_frames": true,
      "js": [
        "lib/contentCommons.js",
        "lib/gestureHandler.js",
        "lib/gestureIndicator.js",
        "lib/rockerHandler.js",
        "lib/wheelHandler.js",
        "lib/content.js"
      ]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "match_about_blank": true,
      "css": [
        "lib/gestureIndicator.css"
      ]
    }
  ],
  "options_ui": {
    "page": "ui/html/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "lib/actions.js",
      "lib/backgroundCommons.js",
      "lib/background.js"
    ]
  },
  "web_accessible_resources": [
     "res/fonts/arrows.woff",
     "res/fonts/Orkney_Regular.woff"
  ]
}
